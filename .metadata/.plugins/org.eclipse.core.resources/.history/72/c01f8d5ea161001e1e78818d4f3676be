package com.gme.hom.kyc.merchants.repositories;

import java.util.List;
import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.gme.hom.kyc.merchants.model.Merchant;
import com.gme.hom.kyc.merchants.model.MerchantDTO;

@Repository
public interface MerchantRepository extends JpaRepository<Merchant, Long> {
	
	@Query(value = "select m.email_id, m.phone_number, m.incorporation_ountry from merchants m", nativeQuery = true)
	List<MerchantDTO> getAllMerchants();
	
	@Query("SELECT m FROM Merchant m WHERE m.emailId = ?1")
	Optional<Merchant> findByEmailId(String username);

	Optional<Merchant> findByPhoneNumber(String phoneNumber);
	
	}
